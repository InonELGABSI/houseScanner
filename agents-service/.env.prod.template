# HouseCheck Server Configuration - PRODUCTION TEMPLATE

# Environment
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration (Ansible will replace)
OPENAI_API_KEY=your-openai-api-key-here
VISION_MODEL=gpt-4o-mini
TEXT_MODEL=gpt-4o-mini

# LangSmith Configuration (Ansible will replace)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langchain-api-key-here
LANGCHAIN_PROJECT=house-check

# Redis Configuration (Docker container networking)
REDIS_URL=redis://redis:6379
CACHE_EXPIRE_SECONDS=3600

# CORS Settings (Ansible will replace YOUR_EC2_DOMAIN)
CORS_ORIGINS=["https://YOUR_EC2_DOMAIN", "http://YOUR_EC2_DOMAIN:8080", "http://YOUR_EC2_DOMAIN"]

# Image Processing Limits
MAX_IMAGE_EDGE=2048
IMAGE_QUALITY=85

# Backend API URL (for callbacks, Ansible will replace)
BACKEND_API_URL=http://YOUR_EC2_DOMAIN:3000

# AWS Configuration for S3 Storage (Ansible will replace)
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Storage Configuration
STORAGE_BUCKET=your-s3-bucket-name
STORAGE_REGION=your-aws-region
STORAGE_ENDPOINT=https://s3.your-aws-region.amazonaws.com
STORAGE_ACCESS_KEY=your-aws-access-key
STORAGE_SECRET_KEY=your-aws-secret-key
