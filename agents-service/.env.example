# HouseCheck Server Configuration Template
# Copy this file to .env and update the values

# Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration  
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration
# REQUIRED: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis Configuration (use 'redis' as hostname when running in Docker)
REDIS_URL=redis://redis:6379
CACHE_EXPIRE_SECONDS=3600

# CORS Settings (for frontend integration)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# AI Models
VISION_MODEL=gpt-4o-mini
TEXT_MODEL=gpt-4o-mini

# Image Processing
MAX_IMAGE_EDGE=2048
IMAGE_QUALITY=85
MAX_IMAGES_PER_REQUEST=50

# Agent Configuration  
MAX_CLASSIFY_IMAGES=4
MAX_CHECKLIST_IMAGES=6
CLASSIFY_MAX_EDGE=512
CHECKLIST_MAX_EDGE=768
CLASSIFY_QUALITY=70
CHECKLIST_QUALITY=80
CHECKLIST_BATCH_SIZE=6

# Security Configuration
# Set to true for local development to allow fetching images from localhost URLs (MinIO, etc.)
# Set to false in production to block localhost/private IP addresses
ALLOW_LOCALHOST_URLS=true

# Rate Limiting
THROTTLE_MS=0
TOKEN_PACE_LIMIT=160000
TOKEN_PACE_SLEEP=8.0

# Retry Configuration
EMPTY_RETRY=1

# LangSmith Configuration (for observability) - Optional
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=house-check