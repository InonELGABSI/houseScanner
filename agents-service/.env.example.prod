# HouseCheck Server Configuration - PRODUCTION
# Copy this file to .env.prod and update with your production values

# Environment
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration
# REQUIRED: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
VISION_MODEL=gpt-4o-mini
TEXT_MODEL=gpt-4o-mini

# LangSmith Configuration (for observability) - Optional
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=house-check

# Redis Configuration (use 'redis' as hostname when running in Docker)
REDIS_URL=redis://redis:6379
CACHE_EXPIRE_SECONDS=3600

# CORS Settings (for frontend integration)
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Image Processing Limits
MAX_IMAGE_EDGE=2048
IMAGE_QUALITY=85
MAX_IMAGES_PER_REQUEST=50

# Agent Configuration
MAX_CLASSIFY_IMAGES=4
MAX_CHECKLIST_IMAGES=6
CLASSIFY_MAX_EDGE=512
CHECKLIST_MAX_EDGE=768
CLASSIFY_QUALITY=70
CHECKLIST_QUALITY=80

# Rate Limiting
THROTTLE_MS=100
TOKEN_PACE_LIMIT=160000
TOKEN_PACE_SLEEP=8.0

# Security Configuration
ALLOW_LOCALHOST_URLS=false

# Retry Configuration
EMPTY_RETRY=1
CHECKLIST_BATCH_SIZE=6
